<% provide(:title, 'Galeri') %>
<%= form_for(@galeri,:html => {:multipart => true}) do |form| %>

  <div class="field">
    <%= form.label :title, "Fotograf adı" %><br>
    <%= form.text_field :title, id: :galeri_title %>
  </div><br>

  <div class="field">
    <%= form.label :avatar, "Fotograf seç" %>
    <%= form.file_field :avatar %>
  </div><br>

  <div class="actions">
    <%= form.submit class: "btn btn-primary", type: "submit", value: "Tamam", data: { disable_with: "Yükleniyor..."} %>
  </div>

<% end %>
